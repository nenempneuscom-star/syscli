# ============================================
# HEALTHFLOW API - Environment Variables
# Copy this to .env and fill in the values
# ============================================

# Server
PORT=3001
NODE_ENV=production
API_URL=https://syscli-api.vercel.app
WEB_URL=https://syscli-web.vercel.app

# Supabase Database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:5432/postgres

# Redis (optional - for caching/sessions)
REDIS_URL=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Encryption (for sensitive data like CPF)
ENCRYPTION_KEY=your-32-character-encryption-key!
ENCRYPTION_IV=your-16-char-iv!

# Logging
LOG_LEVEL=info
